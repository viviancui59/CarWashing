<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fragmentdemo.AddCarInfomationActivity"
    tools:ignore="MergeRootFrame" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#9ccc65"
                android:gravity="center"
                android:text="车辆信息"
                android:textColor="#ffffff"
                android:textSize="20dp" />
      <LinearLayout 
           android:layout_width="60dp"
            android:layout_height="48dp" 
          android:orientation="horizontal"
          android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
          >

          <ImageView
              android:layout_width="20dp"
              android:layout_height="match_parent"
             
              android:src="@drawable/fanhui" />
     
            <Button
                android:id="@+id/btnAboutusBack"
                android:layout_width="wrap_content"
                
                android:layout_height="wrap_content"
                
                android:background="#9ccc65"
                android:onClick="back"
                android:text="返回"
                android:textColor="#ffffff" />
 </LinearLayout>

      <Button
          android:id="@+id/save_car"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:background="#9ccc65"
          android:onClick="Save_Car"
          android:text="保存"
          android:textColor="#ffffff" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="车辆车系" />

            <Button
                android:id="@+id/select_car"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:hint="请选择车型"
                android:onClick="Select_Car"
                android:textSize="15sp" />

        </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
   
   
    android:textColor="#bbbbbb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="车牌号码" />

           
  <EditText
              android:id="@+id/txtinputPlate"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                 android:background="@drawable/kuang"
                 android:hint="      请输入车牌号码"
                  android:textSize="15sp"
                android:ems="10" 
                android:gravity="center"
                
                >

                <requestFocus />
            </EditText>
          

        </LinearLayout>
    </LinearLayout>
 </LinearLayout>
</FrameLayout>