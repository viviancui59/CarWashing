<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ty.fragmentdemo.MyInfoActivity"
    tools:ignore="MergeRootFrame" >
          
	
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

          
		<TextView
	        android:id="@+id/textView1"
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:background="#4caf50"
	        android:gravity="center"
	        android:text="个人资料"
	        android:textColor="#ffffff"
	        android:textSize="20sp" />
            
		<LinearLayout
			android:layout_width="80dp"
    		android:layout_height="48dp" 
			android:orientation="horizontal"
			android:paddingLeft="10dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true">

		<ImageView
			android:layout_width="20dp"
			android:layout_height="match_parent"
			android:src="@drawable/fanhui" />
     
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#4caf50"
			android:onClick="back"
			android:text="返回"
			android:textSize="16sp"
			android:textColor="#ffffff" />
		</LinearLayout>
		
		<Button
          android:id="@+id/modifyMyInfo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:background="#4caf50"
          android:onClick="modifyMyInfo"
          android:text="修改"
          android:textSize="16sp"
          android:textColor="#ffffff" />
	</RelativeLayout>
    
	

    <TextView
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="36dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="手机号"
            android:textColor="#444444"/>

        <TextView
            android:id="@+id/txt_phonenum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:textColor="#444444"
            android:text="user phonenum"
            android:gravity="center_vertical">

        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="36dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="称呼"
            android:textColor="#444444" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:text="user name"
            android:gravity="center_vertical"
            android:cursorVisible="false"
            android:background="@null">

        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="36dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="性别"
            android:textColor="#444444"
            android:id="@+id/textView" />

        <RadioGroup
            android:id="@+id/rgp_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/gender_male"
                android:textColor="#444"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="男"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"/>
        <!--      android:buttonTint="#62c460"-->  


            <RadioButton
                android:id="@+id/gender_female"
                android:textColor="#444"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="女"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"/>
               <!--  android:buttonTint="#62c460" -->
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="36dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="年龄"
            android:textColor="#444444" />

        <EditText
            android:id="@+id/edt_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:text="user age"
            android:gravity="center_vertical"
            android:cursorVisible="false"
            android:background="@null">

        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="1dp"/>

    <TextView
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_marginTop="18dp"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="36dp"
        android:background="#ffffff"
        android:weightSum="1">

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="修改密码"
            android:textColor="#444444" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="240dp"
            android:src="@drawable/more"
            android:layout_centerVertical="true"
            android:id="@+id/imageView"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="1dp"/>


</LinearLayout>
    

